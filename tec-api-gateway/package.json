{
  "name": "tec-api-gateway",
  "version": "1.0.0",
  "description": "TEC Platform API Gateway - Central entry point for all services",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@sentry/node": "^10.39.0",
    "cors": "^2.8.6",
    "dotenv": "^16.6.1",
    "express": "^4.22.1",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.2.0",
    "http-proxy-middleware": "^2.0.9",
    "morgan": "^1.10.0",
    "pino": "^10.3.1",
    "pino-http": "^11.0.0",
    "prom-client": "^15.1.3",
    "winston": "^3.11.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/jest": "^30.0.0",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.19.33",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.0.0",
    "globals": "^15.0.0",
    "jest": "^30.0.0",
    "supertest": "^7.2.2",
    "ts-jest": "^29.1.1",
    "tsx": "^4.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.0.0"
  },
  "overrides": {
    "glob": "^13.0.0",
    "test-exclude": "^7.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ]
  }
}
