# API Gateway Configuration
PORT=3000
NODE_ENV=production

# Service URLs — on Railway, each service gets its own URL.
# Replace with your actual Railway service URLs:
#   https://dashboard.railway.app → your project → each service's public URL
AUTH_SERVICE_URL=https://tec-auth-service.up.railway.app
WALLET_SERVICE_URL=https://tec-wallet-service.up.railway.app
PAYMENT_SERVICE_URL=https://tec-payment-service.up.railway.app

# CORS — set to your frontend domain, or * to allow all origins
CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging (error, warn, info, debug)
LOG_LEVEL=info

# Service version (optional, shown in /health response)
SERVICE_VERSION=1.0.0
